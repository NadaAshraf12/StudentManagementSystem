@model StudentManagementSystem.Controllers.StudentViewModel

@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Student Details
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Student ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Address:</dt>
                        <dd class="col-sm-9">@(Model.Address ?? "N/A")</dd>

                        <dt class="col-sm-3">Branch:</dt>
                        <dd class="col-sm-9">@Model.BranchName</dd>

                        <dt class="col-sm-3">Course:</dt>
                        <dd class="col-sm-9">@Model.CourseName</dd>

                        <dt class="col-sm-3">Created At:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>