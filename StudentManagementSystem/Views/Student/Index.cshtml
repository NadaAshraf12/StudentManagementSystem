@model IEnumerable<StudentManagementSystem.Controllers.StudentViewModel>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="fas fa-users me-2"></i>Students Management
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i>Create New Student
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>Students List
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Branch</th>
                            <th>Course</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td class="fw-bold">@student.Id</td>
                                <td>@student.Name</td>
                                <td>@(student.Address ?? "N/A")</td>
                                <td>@student.BranchName</td>
                                <td>@student.CourseName</td>
                                <td>@student.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@student.Id"
                                           class="btn btn-info btn-sm" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@student.Id"
                                           class="btn btn-warning btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@student.Id"
                                           class="btn btn-danger btn-sm" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        background-color: #343a40;
        color: white;
        font-weight: 600;
    }

    .btn-group .btn {
        margin: 0 2px;
        border-radius: 4px;
    }

    .table-responsive {
        border-radius: 8px;
        overflow: hidden;
    }
</style>